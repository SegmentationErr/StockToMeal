<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteListActivity">


    <TextView
        android:id="@+id/title_favorite_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite list"
        android:layout_marginTop="0.3in"
        android:layout_centerHorizontal="true"
        android:padding="30px"
        android:background="@color/sandybrown"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Fav_RecyclerList"
        android:layout_width="205dp"
        android:layout_height="570dp"
        android:layout_below="@+id/title_favorite_list"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible" />

</RelativeLayout>