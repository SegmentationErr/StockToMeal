<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteListActivity">


    <TextView
        android:id="@+id/title_favorite_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite list"
        android:layout_marginTop="0.3in"
        android:layout_centerHorizontal="true"
        android:padding="30px"
        android:background="@color/sandybrown"/>

    <ListView
        android:id="@+id/lstView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/title_favorite_list"
        android:layout_width="390dp"
        android:layout_height="560dp" />

</RelativeLayout>