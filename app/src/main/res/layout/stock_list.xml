<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StockListActivity">


    <TextView
        android:id="@+id/title_stock_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0.3in"
        android:background="@color/sandybrown"
        android:padding="30px"
        android:text="Stock list" />

    <ListView
        android:id="@+id/lstView"
        android:layout_width="390dp"
        android:layout_height="560dp"
        android:layout_below="@+id/title_stock_list"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lstView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:onClick="onAddButtonClick"
        android:text="Add Food" />

</RelativeLayout>